<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <commands>
      <command name="essentials:smartclone" type="Sitecore.Essentials.Shell.Framework.Commands.SmartClone, Sitecore.Essentials" />
    </commands>
    <processors>
      <uiCloneItems>
        <processor type="Sitecore.Buckets.Pipelines.UI.BucketItemClone, Sitecore.Buckets">
          <patch:delete />
        </processor>
        <processor type="Sitecore.Essentials.Pipelines.CloneItems.UpdateLinks, Sitecore.Essentials" method="Process" patch:after="*[@method='Execute']">
          <param desc="async">false</param>
        </processor>
      </uiCloneItems>
    </processors>
  </sitecore>
</configuration>